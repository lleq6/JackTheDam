<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".AGame">

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="686dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="#88A1A1A1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hostTitle"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lb_hScore"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Score : "
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hostScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:fillViewport="true"
            android:contentDescription="Host Card Holder" >

            <LinearLayout
                android:id="@+id/hostCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hostCard1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/hostCard2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/hostCard3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
                <ImageView
                    android:id="@+id/hostCard4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
                <ImageView
                    android:id="@+id/hostCard5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
                <ImageView
                    android:id="@+id/hostCard6"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
                <ImageView
                    android:id="@+id/hostCard7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
                <ImageView
                    android:id="@+id/hostCard8"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
                <ImageView
                    android:id="@+id/hostCard9"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerTitle"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lb_pScore"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Score : "
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/playerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="Player card holder" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/playerCard1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard6"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard8"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />

                <ImageView
                    android:id="@+id/playerCard9"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/red_back" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/closeButton"
                android:layout_width="67dp"
                android:layout_height="79dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Close Room"
                android:visibility="gone" />

            <Button
                android:id="@+id/drawButton"
                android:layout_width="126dp"
                android:layout_height="79dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Draw"
                android:visibility="gone" />

            <Button
                android:id="@+id/startButton"
                android:layout_width="202dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Start!"
                android:visibility="gone" />

            <Button
                android:id="@+id/quitButton"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:layout_weight="1"
                android:text="Quit"
                android:visibility="gone" />

            <Button
                android:id="@+id/readyButton"
                android:layout_width="201dp"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:text="Ready"
                android:visibility="gone" />

            <Button
                android:id="@+id/playerDrawButton"
                android:layout_width="wrap_content"
                android:layout_height="87dp"
                android:layout_weight="1"
                android:text="Player Draw"
                android:visibility="gone" />

            <Button
                android:id="@+id/stayButton"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:text="Stay"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/codeRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#605F5F"
            android:text="XXXXX"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>